set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

if [ -z "${DB_CONN:-}" ]; then
  echo "âœ‹ Missing DB_CONN (e.g. my-project:us-central1:my-database)!" >&2
  exit 1
fi

if [ -z "${DB_ENCRYPTION_KEY:-}" ]; then
  echo "âœ‹ Missing DB_ENCRYPTION_KEY (e.g. projects/my-project/locations/us-east1/keyRings/my-kr/cryptoKeys/my-key)!" >&2
  exit 1
fi

if [ -z "${DB_APIKEY_DATABASE_KEY:-}" ]; then
  echo "âœ‹ Missing DB_APIKEY_DATABASE_KEY (e.g. secret://projects/my-project/secrets/my-secret/versions/1)!" >&2
  exit 1
fi

if [ -z "${DB_APIKEY_SIGNATURE_KEY:-}" ]; then
  echo "âœ‹ Missing DB_APIKEY_SIGNATURE_KEY (e.g. secret://projects/my-project/secrets/my-secret/versions/1)!" >&2
  exit 1
fi

if [ -z "${DB_VERIFICATION_CODE_DATABASE_KEY:-}" ]; then
  echo "âœ‹ Missing DB_VERIFICATION_CODE_DATABASE_KEY (e.g. secret://projects/my-project/secrets/my-secret/versions/1)!" >&2
  exit 1
fi

if [ -z "${DB_PASSWORD:-}" ]; then
  echo "âœ‹ Missing DB_PASSWORD (e.g. secret://projects/my-project/secrets/my-secret/versions/1)!" >&2
  exit 1
fi

if [ -z "${DB_NAME:-}" ]; then
  DB_NAME="verification"
  echo "ðŸš§ Using database \"${DB_NAME}\"" >&2
fi

if [ -z "${DB_USER:-}" ]; then
  DB_USER="verification"
  echo "ðŸš§ Using username \"${DB_USER}\"" >&2
fi

SUBS="_DB_CONN=${DB_CONN}"
SUBS="${SUBS},_DB_APIKEY_DATABASE_KEY=${DB_APIKEY_DATABASE_KEY}"
SUBS="${SUBS},_DB_APIKEY_SIGNATURE_KEY=${DB_APIKEY_SIGNATURE_KEY}"
SUBS="${SUBS},_DB_VERIFICATION_CODE_DATABASE_KEY=${DB_VERIFICATION_CODE_DATABASE_KEY}"
SUBS="${SUBS},_DB_ENCRYPTION_KEY=${DB_ENCRYPTION_KEY}"
SUBS="${SUBS},_DB_NAME=${DB_NAME}"
SUBS="${SUBS},_DB_PASSWORD=${DB_PASSWORD}"
SUBS="${SUBS},_DB_USER=${DB_USER}"
SUBS="${SUBS},_DB_DEBUG=${DB_DEBUG}"
SUBS="${SUBS},_LOG_DEBUG=${LOG_DEBUG}"

gcloud builds submit "${ROOT}" \
  --config "${ROOT}/builders/migrate.yaml" \
  --substitutions "${SUBS}" \
  --project "${PROJECT_ID}"
